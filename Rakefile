begin
  require 'jeweler'
  Jeweler::Tasks.new do |gemspec|
    gemspec.name = "failuresort"
    gemspec.summary = "Sort RSpec files by number of failures on CI"
    gemspec.description = "FailureSort uses the output logs on CI to calculate which specs fail the most frequently. It uses this to order spec files from greatest to least number of failures."
    gemspec.email = "bkeene@gmail.com"
    gemspec.homepage = "http://github.com/cmdrkeene/failuresort"
    gemspec.authors = ["Brandon Keene"]
  end
rescue LoadError
  puts "Jeweler not available. Install it with: sudo gem install technicalpickles-jeweler -s http://gems.github.com"
end